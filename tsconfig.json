{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "typeRoots" : ["./node_modules/@types", "./src/typings"],
    "types": ["node"],
    "allowJs": true,
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}
